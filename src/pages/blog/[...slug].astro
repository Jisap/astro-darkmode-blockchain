---
import { getCollection, type CollectionEntry } from 'astro:content';
import DefaultLayout from '../../layouts/Default.astro';
import InteriorHero from '../../components/InteriorHero.astro';
import { Tag } from '../../components/Tag';
import { getPostColorFromCategory } from '../../utils/postsUtils';
// import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

type Props = CollectionEntry<'blog'>;

const post:Props = Astro.props;
const { data: { category, title, description, author: { name, title: authorTitle } }} = post;
const { Content } = await post.render();
---
<DefaultLayout>
	<InteriorHero>
		<div class="relative">
			<div class="flex justify-center">
				<Tag
					color={getPostColorFromCategory(category)}
				>
					{ category }
				</Tag>
			</div>
			<h1 class="font-heading font-black text-7xl text-center mt-4">
				{ title }
			</h1>
			<p class="text-center text-xl mt-8 text-zinc-400 max-w-2xl mx-auto">
				{ description }
			</p>
			<div class="flex flex-col items-center mt-8 gap-3">
				<div class="size-16 rounded-full bg-zinc-700 bg-cover bg-center"></div>
				<div class="font-extrabold text-lg">
					{name}
				</div>
				<div class="text-zinc-500">
					{authorTitle}
				</div>
			</div>
		</div>
	</InteriorHero>
	<Content />
</DefaultLayout>

